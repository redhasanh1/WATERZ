# WatermarkAI Environment Configuration
# ALL PATHS ARE FORCED TO D DRIVE (watermarkz folder)

# Redis URL (running locally on D drive)
REDIS_URL=redis://localhost:6379/0

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=change-this-in-production

# Server settings
HOST=0.0.0.0
PORT=5000

# Celery workers
CELERY_CONCURRENCY=2

# GPU settings (leave empty for auto-detect)
CUDA_VISIBLE_DEVICES=0

# Processing limits
MAX_FILE_SIZE=104857600
MAX_VIDEO_LENGTH=600

# Paths (automatically set by server, but can override)
# TEMP_DIR=D:\github\RoomFinderAI\watermarkz\temp
# CACHE_DIR=D:\github\RoomFinderAI\watermarkz\cache
# UPLOAD_DIR=D:\github\RoomFinderAI\watermarkz\uploads
# RESULT_DIR=D:\github\RoomFinderAI\watermarkz\results

# Model optimization
USE_TENSORRT=False
USE_FP16=True

# Monitoring (optional)
SENTRY_DSN=
